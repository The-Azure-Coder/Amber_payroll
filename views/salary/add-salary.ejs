<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/styles/add-salary.css">
</head>

<body>
  <form action="/salaryInfo/add" method="post">
    <h2>Add Hours</h2>
    <span>Select Employee</span>
    <select name="emp_id" id="">
      <% employees.forEach((employee)=>{ %>
      <option value="<%=employee.id%>"><%=employee.first_nm%> <%=employee.last_nm%></option>
      <% })%>
    </select>
    <span>Hours Worked</span>
    <input type="text" name="hrs">

    <span>Overtime hours</span>
    <input type="text" name="overtime_hrs">

    <span>Departments</span>
    <select name="depart_id" id="">
      <% departments.forEach((department)=>{ %>
      <option value="<%=department.id%>"><%=department.department_nm%></option>
      <% })%>
    </select>

    <span>Paycycle</span>
    <select name="paycycle_id" id="">
      <% paycycle.forEach((cycle)=>{ %>
      <option value="<%=cycle.id%>"><%=cycle.start_time%></option>
      <% })%>
    </select>



    <button class="emp-add" type="submit">Submit</button>
  </form>

</body>

</html>